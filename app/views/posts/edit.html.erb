<h3>更新ページ</h3>

<h1>投稿更新</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :title, class: 'form-control', rows: 1, :placeholder => "Enter your title..." %>
  </div>
  
  <div class="form-group">
      <%= f.text_area :content, class: 'form-control', rows: 10, :placeholder => "Enter your content..." %>
  </div>
  
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image ,multiple: true%>
  </div>
  
  <div class="form-group">
      <%= f.text_area :youtube_url, class: 'form-control', rows: 1, :placeholder => "Enter Youtube URL..." %>
  </div>

      <%= f.submit '更新する', class: 'btn btn-warning btn-block' %>
 <% end %>

<% @post.image.each do |image|%>
  <%= image_tag image.variant(resize: "500x500") %>
<% end %>
