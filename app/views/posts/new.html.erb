<h1>新規投稿画面</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :title, class: 'form-control', rows: 1, :placeholder => "Enter your title..." %>
  </div>
  
  <div class="form-group">
      <%= f.text_area :content, class: 'form-control', rows: 10, :placeholder => "Enter your content..." %>
  </div>
  
  <div class="form-group">
    <%= form_with model: @post, local: true  do |form| %>
    <%= form.file_field :image %>
    <%= form.submit %>
<% end %>
  </div>
  
      <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
 <% end %>
