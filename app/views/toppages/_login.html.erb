<h2>sign in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, :placeholder => "Enter your email", autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>
 
    <div class="form-group">
      <%= f.password_field :password, :placeholder => "Enter your password", :class => "form-control" %>
    <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, :class => "form-check-input" %>
      <%= f.label :remember_me, "ログインを記憶", :class => "form-check-label" %>
    </div>
    <% end %>
 
    <div class="actions">
      <%= f.submit "ログイン", :class => "btn btn-primary btn-block" %>
    </div>
    <% end %>